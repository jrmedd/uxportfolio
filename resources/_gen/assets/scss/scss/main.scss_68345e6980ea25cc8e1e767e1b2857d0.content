@import "https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500&display=swap";*{box-sizing:border-box}body{margin:0}:root{font-family:work sans,sans-serif}h1,h2,h3,h4,h5{width:fit-content;font-weight:400;width:70ch;max-width:100%}body{background-color:#27252f;color:#fff}header,main,nav{width:60rem;max-width:95%;margin:0 auto}header{height:auto;min-height:4rem;margin-bottom:2rem;border-bottom:2px solid #fff;font-size:1.5rem}header a{border-bottom:0;letter-spacing:.05ch}header a strong{display:inline-block;margin-top:1rem}header a span{display:inline-block;clear:left;margin:1rem 0}nav{display:flex;margin-top:2rem;border-top:2px solid #fff;height:4rem;justify-content:space-between;align-items:center}p{width:70ch;max-width:100%;margin:1rem 0;font-size:1.25rem;line-height:150%}a{border-bottom:2px dashed #fff;color:#fff;font-weight:400;text-decoration:none}.work{width:70ch}.work>div+div{margin-top:2rem}.work dt::after{content:': '}.work dt,.work dd{display:inline;margin:0;font-size:1.25rem;line-height:150%}section+section{margin-top:4rem}ul{width:70ch;max-width:100%;padding-left:1rem;font-size:1.25rem;line-height:150%}ul li{margin:1.5rem 0}figure{width:40rem;max-width:100%;margin:2rem 0;position:relative}figure figcaption{position:absolute;left:0;right:0;bottom:0;padding:.5rem;background-color:#27252fdd;text-shadow:1px 1px 0 #3a343d}figure img,figure video{width:100%}