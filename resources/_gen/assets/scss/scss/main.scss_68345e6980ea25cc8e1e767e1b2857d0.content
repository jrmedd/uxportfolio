@import "https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500&display=swap";:root{font-family:work sans,sans-serif}h1,h2,h3,h4,h5{font-weight:400}body{background-color:#27252f;color:#fff}header,main,nav{width:60rem;max-width:95%;margin:0 auto}header{display:flex;height:auto;min-height:4rem;margin-bottom:2rem;border-bottom:2px solid #fff;justify-content:flex-start;align-items:center;font-size:1.5rem}header a{border-bottom:0;letter-spacing:.05ch}header a span{display:inline-block;clear:left}nav{display:flex;margin-top:2rem;border-top:2px solid #fff;height:4rem;justify-content:space-between;align-items:center}p{width:70ch;max-width:100%;font-size:1.25rem;line-height:150%}a{border-bottom:2px dashed #fff;color:#fff;font-weight:400;text-decoration:none}.work>div+div{margin-top:1rem}.work dt::after{content:':'}.work dt,.work dd{display:inline;margin:0;font-size:1.25rem;line-height:150%}section+section{margin-top:4rem}ul{max-width:70ch;padding-left:1rem;font-size:1.25rem;line-height:150%}.hero{width:60rem;max-width:95%;margin:0;position:relative}.hero figcaption{position:absolute;left:0;right:0;bottom:0;padding:.5rem;background-color:#27252fdd;text-shadow:1px 1px 0 #3a343d}.hero img{width:100%}.social{border:0;justify-content:flex-start;align-items:flex-start}.social ul{display:flex;margin:0;padding:0;gap:1rem;flex-flow:row wrap}.social li{list-style:none;text-transform:capitalize}